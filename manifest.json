{
  "manifest_version": 3,
  "name": "VHLFans",
  "version": "1.2",
  "description": "Adds a button to VHL Central lessons to send an API request.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["https://*.vhlcentral.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "32": "VHLGang32.png",
    "48": "VHLGang48.png",
    "128": "VHLGang128.png"
  },
}